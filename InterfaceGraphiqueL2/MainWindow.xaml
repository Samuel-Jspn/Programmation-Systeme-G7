<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceGraphiqueL2"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="InterfaceGraphiqueL2.MainWindow"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:InterfaceGraphiqueL2.Properties.Langs"
        Title="EasySave" Height="450" Width="800">
    <Window.Resources>
        <local:App x:Key="Language"/>
    </Window.Resources>
    <Grid>


        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Height="23" Margin="510,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LabelSaveName" Content="{x:Static language:Lang.saveName}" Margin="510,41,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Left"/>
        <Label x:Name="LabelSourcePath" Content="{x:Static language:Lang.sourcePath}" Margin="507,100,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalContentAlignment="Center">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.232"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.612"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="TextBoxSourcePath" Margin="510,127,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" Width="120" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="LabelTargetPath" Content="{x:Static language:Lang.targetPath}" Margin="515,172,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="TextBoxTargetPath" Height="23" Margin="510,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <ComboBox x:Name="ComboType" Margin="510,269,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120">
            <System:String>Complète</System:String>
            <System:String>Séquentielle</System:String>
        </ComboBox>
        <Button x:Name="btn_Save" Content="{x:Static language:Lang.saveButton}" Margin="510,306,0,0" VerticalAlignment="Top" Height="65" HorizontalAlignment="Left" Width="120"/>
        <Label x:Name="LabelSaveType" Content="{x:Static language:Lang.saveType}" Margin="510,243,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button x:Name="btn_en" HorizontalAlignment="Left" Margin="118,341,0,0" VerticalAlignment="Top" Width="100" Height="68" Click="btn_en_Click">
            <Image  Source="/flag_en.png"  Stretch="Fill" >
                <Image.Effect>
                    <DropShadowEffect/>
                </Image.Effect>
            </Image>
        </Button>
        <!-- <Image x:Name="flag_en" HorizontalAlignment="Left" Height="68" Margin="103,357,0,0" VerticalAlignment="Top" Width="100" Source="/flag_en.png" Stretch="Fill">-->

        <Button x:Name="btn_fr" HorizontalAlignment="Left" Margin="251,341,0,0" VerticalAlignment="Top" Height="68" Width="100" Click="btn_fr_Click">
            <Image Source="/flag_fr.png" Stretch="Fill">
                <Image.Effect>
                    <DropShadowEffect/>
                </Image.Effect>
            </Image>
        </Button>
        <Button x:Name="btn_param" Content="   " HorizontalAlignment="Left" Margin="25,339,0,0" VerticalAlignment="Top" Width="68" Height="70" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}" Click="btn_param_Click">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="/param_logo.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
